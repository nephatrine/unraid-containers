<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
	<Name>quake2-server</Name>
	<Repository>nephatrine/quake2-server:latest</Repository>
	<Registry>https://hub.docker.com/r/nephatrine/quake2-server/</Registry>

	<Network>bridge</Network>
	<Privileged>false</Privileged>

	<Support>https://code.nephatrine.net/NephNET/docker-quake2-yamagi/issues</Support>
	<Project>https://www.yamagi.org/quake2/</Project>
	<Overview>Quake II Server</Overview>
	<TemplateURL>https://code.nephatrine.net/NephNET/unraid-containers/raw/branch/master/nephatrine/quake2-server.xml</TemplateURL>
	<Icon>https://nephatrine.net/images/buttons/quake2-server.png</Icon>

	<Beta>False</Beta>
	<Date>2023-05-04</Date>

	<Config Name="System Timezone" Target="TZ" Default="America/New_York" Description="Configuration Variable: TZ" Type="Variable" Display="always" Required="false" Mask="false"></Config>
	<Config Name="Mount Owner UID" Target="PUID" Default="1000" Description="Configuration Variable: PUID" Type="Variable" Display="always" Required="false" Mask="false"></Config>
	<Config Name="Mount Owner GID" Target="PGID" Default="100" Description="Configuration Variable: PGID" Type="Variable" Display="advanced" Required="false" Mask="false"></Config>

	<Config Name="Start Args" Target="GAME_START" Default="+set port 27911 +exec server.cfg" Description="Configuration Variable: GAME_START" Type="Variable" Display="always" Required="true" Mask="false"></Config>
    
    <Config Name="Server Port 1" Target="27910" Default="" Mode="udp" Description="Container Port: 27910/udp" Type="Port" Display="always" Required="false"></Config>
    <Config Name="Server Port 2" Target="27911" Default="" Mode="udp" Description="Container Port: 27911/udp" Type="Port" Display="always" Required="false"></Config>
    <Config Name="Server Port 3" Target="27912" Default="" Mode="udp" Description="Container Port: 27912/udp" Type="Port" Display="always" Required="false"></Config>
    <Config Name="Server Port 4" Target="27913" Default="" Mode="udp" Description="Container Port: 27913/udp" Type="Port" Display="always" Required="false"></Config>

	<Config Name="Configuration Mount" Target="/mnt/config" Default="/mnt/user/appdata/quake2-server" Mode="rw" Description="Container Path: /mnt/config" Type="Path" Display="always" Required="true"></Config>
	<Config Name="Shared Mount" Target="/mnt/shared" Default="" Mode="r" Description="Container Path: /mnt/shared" Type="Path" Display="always" Required="false"></Config>
</Container>
